<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context="com.sharad.brainywood.LiveFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:orientation="vertical">


            <TextView


                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/geo_sans_light"
                android:gravity="start"
                android:text="Here Are Zoom Live Streams"
                android:textColor="@color/Gray"
                android:textSize="25sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_weight="1"
                        android:background="@color/yellow"
                        app:cardBackgroundColor="@color/yellow"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="5dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/pureblue_bg"
                            android:orientation="vertical">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <ImageView
                                    android:id="@+id/thumbnail"
                                    android:layout_width="match_parent"
                                    android:layout_height="180dp"
                                    android:background="@color/Black65"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/video_thumbnail" />


                                <ImageView
                                    android:id="@+id/playButton"
                                    android:layout_width="match_parent"
                                    android:layout_height="180dp"
                                    android:background="@color/Black50"
                                    android:padding="60dp"
                                    android:scaleType="fitCenter"
                                    android:src="@drawable/ic_play" />

                                <ImageView
                                    android:id="@+id/downloadButton"
                                    android:layout_width="60dp"
                                    android:layout_height="60dp"
                                    android:layout_alignParentEnd="true"
                                    android:padding="15dp"
                                    android:src="@drawable/ic_download"
                                    android:visibility="gone" />


                            </RelativeLayout>


                            <TextView

                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/geo_sans_light"
                                android:gravity="center_vertical"
                                android:paddingStart="20dp"
                                android:paddingTop="8dp"
                                android:paddingEnd="8dp"
                                android:paddingBottom="10dp"
                                android:text="Fundamentals of Brain Science"
                                android:textColor="@color/White"
                                android:textSize="20sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/geo_sans_light"
                                android:gravity="center_vertical"
                                android:paddingStart="20dp"
                                android:paddingEnd="8dp"
                                android:paddingBottom="8dp"
                                android:text="https://vimeo.com/video/462061589/"
                                android:textColor="@color/White"
                                android:textSize="18sp"
                                android:textStyle=""
                                android:visibility="gone" />


                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_weight="1"
                        android:background="@color/yellow"
                        android:visibility="gone"
                        app:cardBackgroundColor="@color/yellow"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="5dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/yellow_bg"
                            android:orientation="vertical">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="90dp"
                                    android:background="@color/Black65"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/videos2" />


                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="90dp"
                                    android:background="@color/Black30"
                                    android:padding="20dp"
                                    android:scaleType="fitCenter"
                                    android:src="@drawable/ic_play" />


                            </RelativeLayout>


                            <TextView

                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/geo_sans_light"
                                android:gravity="center_vertical"
                                android:paddingStart="20dp"
                                android:paddingTop="8dp"
                                android:paddingEnd="8dp"
                                android:paddingBottom="8dp"
                                android:text="Dummy Data"
                                android:textColor="@color/White"
                                android:textSize="20sp"
                                android:textStyle="bold" />


                        </LinearLayout>

                    </androidx.cardview.widget.CardView>


                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_weight="1"
                        android:background="@color/yellow"
                        app:cardBackgroundColor="@color/yellow"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="5dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/green_bg"
                            android:orientation="vertical">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="90dp"
                                    android:background="@color/Black65"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/videos3" />


                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="90dp"
                                    android:background="@color/Black30"
                                    android:padding="20dp"
                                    android:scaleType="fitCenter"
                                    android:src="@drawable/ic_play" />


                            </RelativeLayout>


                            <TextView

                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/geo_sans_light"
                                android:gravity="center_vertical"
                                android:paddingStart="20dp"
                                android:paddingTop="8dp"
                                android:paddingEnd="8dp"
                                android:paddingBottom="8dp"
                                android:text="Dummy Data"
                                android:textColor="@color/White"
                                android:textSize="20sp"
                                android:textStyle="bold" />


                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_weight="1"
                        android:background="@color/yellow"
                        app:cardBackgroundColor="@color/yellow"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="5dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/red_bg"
                            android:orientation="vertical">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="90dp"
                                    android:background="@color/Black65"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/videos4" />


                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="90dp"
                                    android:background="@color/Black30"
                                    android:padding="20dp"
                                    android:scaleType="fitCenter"
                                    android:src="@drawable/ic_play" />


                            </RelativeLayout>


                            <TextView

                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/geo_sans_light"
                                android:gravity="center_vertical"
                                android:paddingStart="20dp"
                                android:paddingTop="8dp"
                                android:paddingEnd="8dp"
                                android:paddingBottom="8dp"
                                android:text="Dummy Data"
                                android:textColor="@color/White"
                                android:textSize="20sp"
                                android:textStyle="bold" />


                        </LinearLayout>

                    </androidx.cardview.widget.CardView>


                </LinearLayout>


            </LinearLayout>


        </LinearLayout>


    </LinearLayout>


</LinearLayout>