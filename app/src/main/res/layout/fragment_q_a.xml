<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity=""
    android:orientation="vertical"
    tools:context="com.sharad.brainywood.QnAFragment">

    <!-- Q & A section  -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:orientation="vertical">


            <TextView


                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/geo_sans_light"
                android:gravity="start"
                android:text="Questions &amp; Answers"
                android:textColor="@color/Gray"
                android:textSize="25sp"
                android:textStyle="bold" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/square_bg_white"
                android:orientation="vertical">


                <EditText
                    android:textSize="16sp"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_toLeftOf="@+id/searchButton"
                    android:background="@color/Transparent"
                    android:hint="What do you want to know?"
                    android:paddingStart="15dp" />

                <ImageView
                    android:id="@+id/searchButton"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_alignParentEnd="true"
                    android:padding="12dp"
                    android:src="@drawable/ic_search_black" />

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="25dp"
                    android:fontFamily="@font/geo_sans_light"
                    android:gravity="start|bottom"

                    android:text="Filter: "
                    android:textColor="@color/Gray"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <Button
                    android:layout_marginEnd="10dp"
                    android:layout_alignParentEnd="true"
                    android:padding="10dp"
                    android:text="ask question"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/square_bg_white"/>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/open_sans_regular"
                    android:gravity="start"
                    android:text="All "
                    android:textColor="@color/skyblue"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/open_sans_regular"
                    android:gravity="start"
                    android:text="Open "
                    android:textColor="@color/skyblue"
                    android:textSize="16sp"
                    android:textStyle="" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/open_sans_regular"
                    android:gravity="start"
                    android:text="Resolved "
                    android:textColor="@color/skyblue"
                    android:textSize="16sp"
                    android:textStyle="" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/open_sans_regular"
                    android:gravity="start"
                    android:text="Closed "
                    android:textColor="@color/skyblue"
                    android:textSize="16sp"
                    android:textStyle="" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/open_sans_regular"
                    android:gravity="start"
                    android:text="Unanswered "
                    android:textColor="@color/skyblue"
                    android:textSize="16sp"
                    android:textStyle="" />

            </LinearLayout>

            <LinearLayout
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/square_bg_white"
                android:orientation="horizontal">


                <TextView
                    android:background="@drawable/orange_circle"
                    android:layout_margin="10dp"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    android:textColor="@color/orangeDark"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:text="\?"/>

                <LinearLayout
                    android:gravity="center_vertical"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="10dp"
                            android:fontFamily="@font/open_sans_regular"
                            android:gravity="start"
                            android:text="How this app works? "
                            android:textColor="@color/skyblue"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                android:layout_marginTop="0dp"
                                android:fontFamily="@font/geo_sans_light"
                                android:gravity="start"
                                android:text="> Haris"
                                android:textColor="@color/skyblue"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="3dp"
                                android:layout_marginTop="0dp"
                                android:fontFamily="@font/geo_sans_light"
                                android:gravity="start"
                                android:text="asked 3 months ago"
                                android:textColor="@color/Gray"
                                android:textSize="15sp"
                                android:textStyle="" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_marginStart="10dp"
                            android:layout_marginBottom="10dp"
                            android:layout_marginTop="10dp"
                            android:gravity="center_vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/geo_sans_light"
                                    android:gravity="center"
                                    android:text="57\nViews"
                                    android:textColor="@color/Gray"
                                    android:textSize="16sp"/>


                            </LinearLayout>

                            <LinearLayout
                                android:layout_marginStart="20dp"
                                android:gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/geo_sans_light"
                                    android:gravity="center"
                                    android:text="0\nAnswers"
                                    android:textColor="@color/Gray"
                                    android:textSize="15sp"/>


                            </LinearLayout>


                            <LinearLayout
                                android:layout_marginStart="20dp"

                                android:gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView


                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/geo_sans_light"
                                    android:gravity="center"
                                    android:text="1\nVotes"
                                    android:textColor="@color/Gray"
                                    android:textSize="15sp"/>


                            </LinearLayout>


                        </LinearLayout>


                    </LinearLayout>


                </LinearLayout>


            </LinearLayout>

        </LinearLayout>


    </LinearLayout>


