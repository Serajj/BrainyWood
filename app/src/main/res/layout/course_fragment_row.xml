<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="180dp"
                    android:layout_height="130dp"
                    android:layout_margin="10dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="10dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/course_image"
                            android:layout_width="180dp"

                            android:layout_height="130dp"
                            android:background="@color/Black65"
                            android:scaleType="fitXY"
                            android:src="@drawable/default_image" />

                        <View
                            android:visibility="gone"

                            android:id="@+id/course_front"
                            android:layout_width="match_parent"
                            android:layout_height="130dp"
                            android:background="@color/orangeDarkLighter25"
                            android:padding="40dp" />

                        <ProgressBar
                            android:id="@+id/course_progress"
                            android:layout_width="match_parent"
                            android:layout_height="130dp"
                            android:padding="40dp"
                            android:visibility="gone" />

                    </RelativeLayout>


                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/course_name"

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginEnd="0dp"
                        android:fontFamily="@font/proxima_nova"
                        android:gravity="center"
                        android:padding="7dp"
                        android:text=""
                        android:textColor="@color/Gray"
                        android:textSize="20sp"
                        android:textStyle="" />


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginEnd="20dp"
                        android:fontFamily="@font/open_sans_regular"
                        android:gravity="center"
                        android:text="Brain Science"
                        android:textColor="@color/Gray"
                        android:textSize="15sp"
                        android:visibility="gone" />

                </LinearLayout>


            </LinearLayout>


            <LinearLayout

                android:id="@+id/courseLayoutBackground"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:fontFamily="@font/geo_sans_light"
                    android:gravity="center"
                    android:paddingStart="15dp"
                    android:paddingTop="8dp"
                    android:paddingEnd="8dp"
                    android:paddingBottom="8dp"
                    android:shadowColor="@color/Gray"
                    android:shadowDx="1"
                    android:shadowDy="1"
                    android:shadowRadius="10"
                    android:text="VIEW DETAILS"
                    android:textColor="@color/White"
                    android:textSize="18sp"
                    android:textStyle="bold" />

            </LinearLayout>


        </LinearLayout>

    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:layout_weight="1"
        android:visibility="gone"
        app:cardCornerRadius="20dp"
        app:cardElevation="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="130dp"
                    android:background="@color/Black65"
                    android:scaleType="fitXY" />

                <ProgressBar
                    android:layout_width="match_parent"
                    android:layout_height="130dp"
                    android:padding="40dp" />


            </RelativeLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/geo_sans_light"
                android:gravity="center_vertical"
                android:paddingStart="15dp"
                android:paddingTop="8dp"
                android:paddingEnd="8dp"
                android:paddingBottom="8dp"
                android:shadowColor="@color/Gray"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="10"
                android:text="course name"
                android:textColor="@color/White"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/course_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/geo_sans_light"
                android:gravity="center_vertical"
                android:paddingStart="15dp"
                android:paddingTop="0dp"
                android:paddingEnd="8dp"
                android:paddingBottom="8dp"
                android:shadowColor="@color/Gray"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="10"
                android:text="course description"
                android:textColor="@color/White"
                android:textSize="16sp"
                android:textStyle="bold"
                android:visibility="gone" />


        </LinearLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>